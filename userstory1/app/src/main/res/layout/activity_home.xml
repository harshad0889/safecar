<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:id="@+id/drawer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/location"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:background="#009688"
            android:hint="       Preferred Area" />

        <ImageView
            android:id="@+id/locic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="290dp"
            android:layout_marginTop="215dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/location" />

        <EditText
            android:id="@+id/dates"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="300dp"
            android:background="#009688"
            android:hint="   pickup " />

        <ImageView
            android:id="@+id/datepickic"
            android:layout_width="38dp"
            android:layout_height="34dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="310dp"
            android:src="@drawable/cal" />

        <EditText
            android:id="@+id/datedrop"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="300dp"
            android:layout_marginEnd="23dp"
            android:layout_toEndOf="@+id/dates"
            android:background="#009688"
            android:hint="   drop off " />

        <ImageView
            android:id="@+id/datedropic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="30dp"
            android:src="@drawable/cal" />

        <Button
            android:id="@+id/finddriver"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="180dp"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="25dp"
            android:background="#3F51B5"
            android:text="Find drivers"
            android:textStyle="bold" />

        <Button
            android:id="@+id/findcar"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="450dp"

            android:background="#3F51B5"
            android:text="Find cars"
            android:textStyle="bold" />

        <include layout="@layout/appbar" />
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav"
        app:headerLayout="@layout/layout_navigation_header"
        app:menu="@menu/navigation_menu">

    </com.google.android.material.navigation.NavigationView>



</androidx.drawerlayout.widget.DrawerLayout>