<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:background="@color/lightwhite"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/carowner"
        android:hint="cowner"
        android:layout_marginStart="2dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Add Car"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Brand"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:hint="  Brand"
        android:inputType="textPersonName"
        android:elevation="5dp"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/model"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:textSize="18dp"
        android:hint="  Model"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:elevation="5dp"
        android:inputType="textPersonName"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:hint="  Rent Amount"
        android:inputType=""
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"

        android:elevation="5dp"
        android:textSize="18dp"
        android:id="@+id/amount"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType=""
        android:id="@+id/agency"
        android:hint="  Agency"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:elevation="5dp"/>


    <EditText
        android:id="@+id/kms"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:hint="  Kms Driven"
        android:inputType="phone"
        android:elevation="5dp"

        android:textSize="18dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="phone"
        android:id="@+id/phonenum"
        android:hint="  Ph.no"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:elevation="5dp"/>
    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="text"
        android:id="@+id/loc"
        android:hint="  location"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:elevation="5dp"
        android:textSize="18dp"
        android:focusable="false"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:id="@+id/emailcar"
        android:hint="  email"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn"
        android:ems="8"
        android:elevation="5dp"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@color/white"
            android:maxWidth="25dp"
            android:maxHeight="@dimen/cardview_compat_inset_shadow"
            android:text="Add Image"
            android:textColor="@color/white"
            android:textSize="20dp"

            android:textStyle="italic" />


        <Button
            android:id="@+id/addimage"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:background="@color/colorPrimaryDark"
            android:text="UPLOAD"


            />


    </LinearLayout>




    <Button
        android:id="@+id/addcar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:textStyle="bold"
        android:background="@drawable/joinbtn"
        android:text="ADD"
        android:onClick="addRecord"
        android:textColor="#fff"/>


    <Button
        android:id="@+id/carreset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/joinbtn"
        android:ems="10"
        android:onClick="addRecord"
        android:text="CANCEL"
        android:textColor="#fff"
        android:textStyle="bold" />


</LinearLayout>
</ScrollView>